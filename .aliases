### NeoVim
alias v='nvim'

### clear
alias c='clear'

### ranger change directory on exit
alias nav='ranger-cd'

### ls
alias l='ls'
alias ls='ls --color=auto'
alias ll='ls -l --color=auto'
alias la='ls -A --color=auto'
alias lla='ls -lA --color=auto'

### grep
alias grep='grep --color=auto'

### git
alias gi='git init'

alias gc='git clone'

alias gs='git status'
alias gsv='git status -v'

alias ga='git add'
alias gaa='git add --all'
alias gap='git add --patch'
alias gae='git add --edit'

alias gcm='git commit'
alias gcv='git commit -v'
alias gcmm='git commit -m'
alias gca='git commit --amend'

alias gco='git checkout'
alias gcob='git checkout -b'

alias gb='git branch'
alias gba='git branch -a'
alias gbd='git branch -d'

alias gd='git diff'
alias gds='git diff --staged'

alias gl='git log'
alias glo='git log --oneline'

alias gp='git push'
alias gpsu='git push --set-upstream'

alias gpl='git pull --no-rebase'
alias gplr='git pull --rebase'

alias gf='git fetch'
alias gfpr='git fetch --prune'

alias grv='git remote -v'
alias gra='git remote add'
alias grr='git remote remove'

alias grsts='git restore --staged'
alias grst='git restore'

alias gg='git log --all --decorate --oneline --graph'

alias gm='git merge'

# fzf
alias sd='cd $(find * -type d 2>/dev/null | fzf)'

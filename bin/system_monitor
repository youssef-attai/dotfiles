#!/usr/bin/env bash

window="$(xdotool search --class system_monitor_scratchpad)"
tmp_file="/tmp/system_monitor_scratchpad"

if [ -z "$window" ]; then
    kitty --class system_monitor_scratchpad bpytop
else
    if [ ! -f "$tmp_file" ]; then
        touch "$tmp_file" && xdo hide "$window"
    elif [ -f "$tmp_file" ]; then
        rm "$tmp_file" && xdo show "$window"
    fi
fi

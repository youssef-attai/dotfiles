#!/usr/bin/env bash

# Get first argument
if [ -z "$1" ]; then
  cd ~/.config
  nvim ~/.config
  exit 0
fi

if [ "$1" == "config" ]; then
    cd ~/bin
    nvim config
    exit 0
fi

if [ "$1" == "help" ]; then
    echo "Usage: config [config]"
    echo "config: git, x, aliases, env, i3, nvim, zsh, polybar, rofi, dunst, picom, alacritty, ranger, mpd, qtile, neofetch"
    exit 0
fi

# If first argument is git, then open git config file
if [ "$1" == "git" ]; then
    cd
    nvim ~/.gitconfig
    exit 0
fi

# If first argument is x, then open xinit config file
if [ "$1" == "x" ]; then
    cd
    nvim ~/.xinitrc
    exit 0
fi

# If first argument is aliases, then open aliases config file
if [ "$1" == "aliases" ]; then
    cd
    nvim ~/.aliases
    exit 0
fi

# If first argument is env, then open .env file
if [ "$1" == "env" ]; then
    cd
    nvim ~/.env
    exit 0
fi

# If first argument is i3, then open i3 config file
if [ "$1" == "i3" ]; then
    cd ~/.config/i3
    nvim ~/.config/i3/config
    exit 0
fi

# If first argument is nvim, then open nvim config file
if [ "$1" == "nvim" ]; then
    cd ~/.config/nvim
    nvim ~/.config/nvim/
    exit 0
fi

# If first argument is zsh, then open zsh config file
if [ "$1" == "zsh" ]; then
    cd ~/.zsh
    nvim ~/.zsh/.zshrc
    exit 0
fi

# If first argument is polybar, then open polybar config file
if [ "$1" == "polybar" ]; then
    cd ~/.config/polybar
    nvim ~/.config/polybar/config.ini
    exit 0
fi

# If first argument is rofi, then open rofi config file
if [ "$1" == "rofi" ]; then
    cd ~/.config/rofi
    nvim ~/.config/rofi/config.rasi
    exit 0
fi

# If first argument is dunst, then open dunst config file
if [ "$1" == "dunst" ]; then
    cd ~/.config/dunst
    nvim ~/.config/dunst/dunstrc
    exit 0
fi

# If first argument is picom, then open picom config file
if [ "$1" == "picom" ]; then
    cd ~/.config/picom
    nvim ~/.config/picom/picom.conf
    exit 0
fi

# If first argument is alacritty, then open alacritty config file
if [ "$1" == "alacritty" ]; then
    cd ~/.config/alacritty
    nvim ~/.config/alacritty/alacritty.yml
    exit 0
fi

# If first argument is ranger, then open ranger config file
if [ "$1" == "ranger" ]; then
    cd ~/.config/ranger
    nvim ~/.config/ranger/rc.conf
    exit 0
fi

# If first argument is mpd, then open mpd config file
if [ "$1" == "mpd" ]; then
    cd ~/.config/mpd
    nvim ~/.config/mpd/mpd.conf
    exit 0
fi

# If first argument is qtile, then open qtile config file
if [ "$1" == "qtile" ]; then
    cd ~/.config/qtile
    nvim ~/.config/qtile/config.py
    exit 0
fi

# Neofetch
if [ "$1" == "neofetch" ]; then
    cd ~/.config/neofetch
    nvim ~/.config/neofetch/config.conf
    exit 0
fi

#!/bin/bash

# Get the names of the active workspaces
active_workspaces=$(bspc query -D -d .occupied --names)
active_workspaces=$(echo $active_workspaces | sed 's/ /, /g')

# Get the name of the focused workspace
focused_workspace=$(bspc query -D -d .focused --names)

icon="$HOME/Pictures/svg/window.svg"
dunstify -r 5555 -t 2000 "Occupied: $active_workspaces" "Current: $focused_workspace" -i $icon -u low

#!/bin/bash

# Use setxkbmap to toggle between two languages ara and us
if [ $(setxkbmap -query | grep -c "layout:     us") -eq 1 ]
then
    setxkbmap ara
    icon="$HOME/Pictures/svg/eg.svg"
    dunstify -a "change_language" -r 9931 -i $icon "Changed keyboard layout" "Arabic" -t 1000 -u low
else
    setxkbmap us
    icon="$HOME/Pictures/svg/us.svg"
    dunstify -a "change_language" -r 9931 -i $icon "Changed keyboard layout" "English" -t 1000 -u low
fi


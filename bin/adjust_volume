#!/bin/bash

volume_max_icon="$HOME/Pictures/svg/volume-max.svg"
volume_min_icon="$HOME/Pictures/svg/volume-min.svg"
volume_off_icon="$HOME/Pictures/svg/volume-off.svg"
volume_mute_icon="$HOME/Pictures/svg/volume-mute.svg"

function send_notification() {
	volume=$(pamixer --get-volume)
  icon=""

  if [ "$volume" -gt "70" ]; then
    icon=$volume_max_icon
  elif [ "$volume" -gt "30" ]; then
    icon=$volume_min_icon
  else
    icon=$volume_off_icon
  fi

	dunstify -a "Adjust volume" -r 9993 -h int:value:"$volume" -i $icon "Volume: ${volume}%" -t 2000 -u low
}

function send_notification_mute() {
  dunstify -a "Adjust volume" -r 9993 -i $volume_mute_icon "Volume muted" -t 2000 -u low
}

case $1 in
up)
	# Set the volume on (if it was muted)
	pamixer -u
	pamixer -i 2
	send_notification $1
	;;
down)
	pamixer -u
	pamixer -d 2
	send_notification $1
	;;
mute)
	pamixer -t
	if $(pamixer --get-mute); then
    send_notification_mute
	else
		send_notification up
	fi
	;;
esac

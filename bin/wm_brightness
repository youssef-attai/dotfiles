#!/usr/bin/env bash

# Get the current brightness
current_brightness=brightnessctl g

# Get amount of brightness to increase/decrease from second argument
amount=${2:-1}

# Get the first argument passed to the script
case $1 in
    up)
        brightnessctl s +$amount%
        ;;
    down)
        brightnessctl s $amount%-
        ;;
    max)
        # Set the brightness to 100%
        brightnessctl s 100%
        ;;
    min)
        # Set the brightness to 1%
        brightnessctl s 1%
        ;;
    *)
        # Print the current brightness
        echo $current_brightness
        ;;
esac
